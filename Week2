fun main(args: Array<String>) {    //if statement    var number: Int= -20    if (number>0){println ("positive number")}    else {println("Negative number")}    var boysAge: Int = 27    var girlsAge: Int = 22    if (boysAge<=girlsAge){        println ("Boys are younger")    } else {println ("Girls are younger")}    var noOfBoys: Int = 100    var noOfGirls: Int = 150    if (noOfBoys==noOfGirls)    {println ("Boys and girls are equal")}    else if (noOfBoys>noOfGirls)    {println ("Boys are more than girls")}    else if (noOfBoys<noOfGirls)    {println("Girls are more than boys")}    var priceOfLocalRice: Double = 25000.00    var priceOfForeignRice: Double = 30000.00    if (priceOfLocalRice>=priceOfForeignRice)    {println ("local rice is cheap")}    var age:Int = 45    if (age>35){        println("You are not qualified")    }    //condtional expression    var drugsSchedule: String = "6am"    var myTime: String = when (drugsSchedule){        "8pm" -> "Take sleeping pills"        "6am" -> "Take ARV drugs"        else -> "No drugs available"    }    println(myTime)}


fun main (){    var numbers100: Int=0    while(numbers100<=100)    {print(numbers100)        numbers100++    }    for (number in 1..10){        if (number==4) continue        if (number==5) continue        println ("number is $number")    }    for (a in 10..30){        if (a in 10..20){            if(a%2==0)println(a)        }    }    if (a in 20..30){        if (a%2==1){println(a)    }    }

fun main {    var myCourses: Courses= Courses}class Courses{    var nameOfCourses: String = ""    var courseDuration: Int = 0    var nameOfSchool: String = ""     var nameOfLecturer: String = ""    var priceOfCourse: Double = 0.0    constructor(nameOfCourses: String, courseDuration: Int,    nameOfSchool: String, nameOfLecturer: String, priceOfCourse: Double){        this.nameOfCourses= nameOfCourses        this.courseDuration= courseDuration        this.nameOfSchool= nameOfSchool        this.nameOfLecturer = nameOfLecturer        this.priceOfCourse= priceOfCourse    }}
